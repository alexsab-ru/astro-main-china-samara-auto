---
import salonsData from '@/data/salons.json';


const brands = [...new Set(salonsData.map((item) => {
  const arr = item.map.balloon.split('/');
  const brand = arr[arr.length-1].split('-')[0];
  return brand;

}))];
---
{
  brands.length ? (
    <div class="flex flex-wrap gap-2 p-2">
      {brands.map((brand) => (
        <div class="flex items-center object-contain w-[70px]"><img src={`https://cdn.alexsab.ru/logo/${brand}/logo-footer.svg`} alt={brand} loading="lazy" class="h-auto w-full filter brightness-0 invert opacity-70" /></div>
      ))}
    </div>
  ) : null
}